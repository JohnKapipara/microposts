<h1>Edit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages', object: f.object %> 

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :from %>
      <%= f.text_field :from %>

      <%= f.label :birthday %>
      <%= f.text_field :birthday %>

      <%= f.submit "submit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>